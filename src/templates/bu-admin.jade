doctype html
html(lang='en')
	head
		title CWB
		script(src='/node_modules/angular/angular.min.js')
		script(src='/node_modules/jquery/dist/jquery.min.js')
		link(rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap-theme.min.css')
		script(src='/node_modules/bootstrap/dist/js/bootstrap.min.js')
		script(src='/dist/scripts/app.js')
		link(href='/dist/styles/style.css', rel='stylesheet')
	body(ng-app='cwbApp')
		div(class='container-fluid')
			header(id='top-header')
				div(class='logo')
				div() Welcome&nbsp;
					strong() ARM Aministrator
					span(class='glyphicon glyphicon-log-out')

			nav()
				ul(class='nav nav-tabs')
					li(role='presentation')
						a(href='') BU Management
					li(role='presentation' class='active')
						a(href='') User Management
					li(role='presentation')
						a(href='') i18n

			section(class='content')
				h4() Business Unit Assets

				nav(class="btn-group", role="group", aria-label="...")
					div(class="btn-group" role="group")
						button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Actions
							span(class='caret')
						ul(class='dropdown-menu')
							li()
								a(href='') Add
							li()
								a(href='') Edit
							li()
								a(href='') Remove
					div(class="btn-group" role="group")
						buton(type="button" class="btn btn-default") Block
						buton(type="button" class="btn btn-default") Enable
						buton(type="button" class="btn btn-default") Block Password
						buton(type="button" class="btn btn-default") Assign Role
						buton(type="button" class="btn btn-default") Manage Roles



				div(class='content-main')
					div(class="input-group")
						span(class="input-group-btn")
							button(class="btn btn-default glyphicon glyphicon-search" type="button")
						input(type="text" class="form-control" id='search' placeholder="")
					p()
						table(class="table table-striped table-condensed table-bordered")
							thead
								tr(class='active')
									th()
									th() Name
									th() Role
									th(width='70%') Status

							tbody
								tr()
									td()
										center() 
											input(type="checkbox")
									td() User 1
									td() Admin
									td() Enabled

								tr()
									tr()
									td()
										center() 
											input(type="checkbox")
									td() User 2
									td() Editor
									td() Blocked

								tr()
									tr()
									td()
										center() 
											input(type="checkbox")
									td() User 3
									td() manager
									td() Enabled				