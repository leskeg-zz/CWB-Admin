doctype html
html(lang='en')
	head
		title CWB
		script(src='/node_modules/angular/angular.min.js')
		script(src='/node_modules/jquery/dist/jquery.min.js')
		link(rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap-theme.min.css')
		script(src='/node_modules/bootstrap/dist/js/bootstrap.min.js')
		script(src='/dist/scripts/app.js')
		link(href='/dist/styles/style.css', rel='stylesheet')
	body(ng-app='cwbApp')
		div(class='container-fluid')
			section(class='popup-content')
				header(class='popup-top-header')
					div(class='popup-title') 
						strong Manage Actions
					div(class='close-popup')
						strong x

				section(class='popup-content-main')
					table(class="table table-striped table-condensed table-bordered")
						thead
							tr(class='active')
								th(width='32px')
								th() Action

						tbody
							tr()
								td()
									center() 
										input(type="checkbox")
								td() CONTENT_VIEW

							tr()
								td()
									center() 
										input(type="checkbox")
								td() CONTENT_EDIT

							tr()
								td()
									center() 
										input(type="checkbox")
								td() COORDINATOR
							tr()
								td()
									center() 
										input(type="checkbox")
								td() SOURCE_ENRICH
					div(class='save-cancel-buttons')
							div(class="btn-group", role="group", aria-label="...")
								div(class="btn-group" role="group")
									buton(type="button" class="btn btn-default") Save
									buton(type="button" class="btn btn-default") Cancel