doctype html
html(lang='en')
	include ./includes/head.jade
	body(ng-app='cwbApp')
		div(class='container-fluid')
			main-header(role="System Administrator")

			nav()
				ul(class='nav nav-tabs')
					li(role='presentation' class='active')
						a(href='') BU Management
					li(role='presentation')
						a(href='') User Management
					li(role='presentation')
						a(href='') i18n

			section(class='content')
				nav(class="btn-group", role="group", aria-label="...")
					div(class="btn-group" role="group")
						buton(type="button" class="btn btn-default") BU List
						buton(type="button" class="btn btn-default") Knowledge Assets
						buton(type="button" class="btn btn-default") Modules Integration

				h4() Business Unit Modules

				div(class='content-main')
					nav(class="btn-group bu-modules-buttons", role="group", aria-label="...")
						div(class="btn-group" role="group")
							buton(type="button" class="btn btn-default") Test
							buton(type="button" class="btn btn-default") Validate
							buton(type="button" class="btn btn-default") Delete
							buton(type="button" class="btn btn-default") Activate
							buton(type="button" class="btn btn-default") Download Config Template
							buton(type="button" class="btn btn-default") Upload Configuration File

					p()
						nav()
							ul(class='nav nav-tabs')
								li(role='presentation' class='active')
									a(href='') Enrichment
								li(role='presentation')
									a(href='') Import

						div(class='content')
							table(class="table table-striped table-condensed table-bordered")
								tr(class='active')
									th(width='33px')
									th() Config File
									th() Upload Date
									th() Status
									th() Config Type

								tr()
									td()
										center() 
											input(type="checkbox")
									td() Data1.xml
									td() 12.03.2015
									td() Valid
									td() FTP Config
								
								tr()
									td()
										center() 
											input(type="checkbox")
									td() Data2.xml
									td() 18.03.2015
									td() Invalid
									td() Service Data

								tr()
									td()
										center() 
											input(type="checkbox")
									td() Data3.xml
									td() 15.03.2015
									td() Active
									td() Storage Config