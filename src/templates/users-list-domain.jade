doctype html
html(lang='en')
	include ./includes/head.jade
	body(ng-app='cwbApp')
		div(class='container-fluid')
			main-header(role="System Administrator")

			nav()
				ul(class='nav nav-tabs')
					li(role='presentation')
						a(href='') BU Management
					li(role='presentation',class='active')
						a(href='') User Management
					li(role='presentation')
						a(href='') i18n

			section(class='content')

				div(class='inline')
					h4() Users List of&nbsp;

					div(class='users-list-domain')
						select(class="form-control", multiple)
							option() ARM
							option() BU1
							option() BU2
							option() BU3
							option() BU4
							option() BU5

				div(class='content-main')
					nav(class="btn-group", role="group", aria-label="...")
						div(class="btn-group" role="group")
							button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Actions
								span(class='caret')
							ul(class='dropdown-menu')
								li()
									a(href='') Add
								li()
									a(href='') Edit
								li()
									a(href='') Remove
						div(class="btn-group" role="group")
							buton(type="button" class="btn btn-default") Block
							buton(type="button" class="btn btn-default") Enable
							buton(type="button" class="btn btn-default") Assign Role
							buton(type="button" class="btn btn-default") Manage Roles
							buton(type="button" class="btn btn-default") Manage Groups

					p()
						table(class="table table-striped table-condensed table-bordered")
							tr(class='active')
								th(width='15%') Name
								th(width='15%') Role
								th(width='70%') Status

							tr()
								td() User 1
								td() Admin
								td() Enabled

							tr()
								td() User 2
								td() Editor
								td() Blocked

							tr()
								td() User 3
								td() manager
								td() Enabled